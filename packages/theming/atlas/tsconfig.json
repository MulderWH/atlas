{
    "extends": "../../tools/pluggable-widgets-tools/configs/tsconfig.base",
    "include": ["./styles/native/**/*.ts"],
    "exclude": [],
    "compilerOptions": {
        "baseUrl": "./",
        "typeRoots": ["./node_modules/@types"],
        "types": ["react-native", "react-native-device-info"],
        "paths": {
            "react-native": ["./node_modules/@types/react-native"],
            "react-native-device-info": ["./node_modules/react-native-device-info/lib/typescript"]
        },
        "target": "ESNext",
        "lib": ["ES2017"],
        "sourceMap": false,
        "removeComments": false,
        "allowJs": true,
        "checkJs": true,
        "outDir": "./styles/native/js",
        "newLine": "CRLF"
    }
}
